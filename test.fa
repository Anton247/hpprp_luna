import SetField(name) as SetField;				       //field initialization 									
import InitSplitsAndIters(name, int, name, int) as Init;	       //number of iterations and field splits initialization 
import CollideCells(value, name, name, name) as Collide;	       //collide cells
import FillEdges(value, value, value, name) as FillEdges;	       //assembly split with shadow edges
import AssemblyNewLayer(value, name) as NewLayer;	 	       //assembly new layer	
import SaveToFiles(int, int, value) as Save;			       //save to files
import c_iprint(int, value) as iprint;


sub main()
{
	df iters, splits, field, x;					//number of iterations and field splits, computational field, auxiliary vector
	
	Init(iters, 10, splits, 4);					//set value of iterations and field splits

	//field initialization 	
	for n=1..splits							
	{
		SetField(field[0][n]);					//field[number of layer][number of split]
	}
	//iterative process
	for j=1..iters							
	{

		//collision of cells in one split
		for n=1..splits						
		{
			//number of split, old field[layer][split] layer, new field[layer+1][split] layer,
			//upper edge[layer][split][0] of the new field, lower edge[layer][split][1] of the newfield
			Collide(field[j*3-3][n], field[j*3-2][n], field[j*3-2][n][0], field[j*3-2][n][1]);
		}

		//assembly splits with shadow edges										
			//first split
		FillEdges(field[j*3-2][1], field[j*3-2][splits][1], field[j*3-2][2][0], field[j*3-1][1]);
			//last split
		FillEdges(field[j*3-2][splits], field[j*3-2][splits - 1][1], field[j*3-2][1][0], field[j*3-1][splits]);		
		for n=2..splits-1
		{
			FillEdges(field[j*3-2][n], field[j*3-2][n][1], field[j*3-2][n+1][0], field[j*3-1][n]);
		}

		//assembly new layer
		for n=1..splits
		{
			NewLayer(field[j*3-1][n], field[j*3][n]); //old field[layer][split], new field[layer+1][split] 
		}
		
		//saving to files
		//if (j%5 == 0)
		//{	
			Save(j, 1, field[j*3][1]) >> (x[((j - 1) * splits)]);
			for n=2..splits
			{
				if (x[((j - 1) * splits) + n - 2])
				Save(j, n, field[j*3][n]) >> (x[((j - 1) * splits) + n - 1]);
			}
		//}

	}
}

